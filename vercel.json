{
    "version": 2,
    "buildCommand": "npx prisma generate && npm run build",
    "outputDirectory": "build",
    "installCommand": "npm install && cd backend && npm install",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
}